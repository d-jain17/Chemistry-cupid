<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/quiz_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/quiz_bg"
        tools:context=".Iodine">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffe3f1"
            app:srcCompat="@android:drawable/ic_media_rew"
            android:contentDescription="back button"
            android:onClick="goToHome"/>

        <ImageView
            android:id="@+id/iodineCartoon1"
            android:layout_width="292dp"
            android:layout_height="195dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:contentDescription="iodine"
            app:srcCompat="@drawable/iodine_cartoon1" />
        <ImageView
            android:id="@+id/iodineCartoon2"
            android:layout_width="292dp"
            android:layout_height="195dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:contentDescription="iodine"
            app:srcCompat="@drawable/iodine_cartoon2"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/iodineCartoon3"
            android:layout_width="292dp"
            android:layout_height="195dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:contentDescription="iodine"
            app:srcCompat="@drawable/iodine_cartoon3"
            android:visibility="invisible"/>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:backgroundTint="#ffe3f1"
            android:contentDescription="toggle_button"
            android:onClick="goToImage1"
            app:srcCompat="@android:drawable/btn_radio"
            android:layout_below="@id/iodineCartoon1"
            android:layout_marginStart="150dp"
            android:layout_marginTop="5dp"/>
        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:backgroundTint="#ffe3f1"
            android:contentDescription="toggle_button"
            android:onClick="goToImage2"
            app:srcCompat="@android:drawable/btn_radio"
            android:layout_below="@id/iodineCartoon1"
            android:layout_marginStart="180dp"
            android:layout_marginTop="5dp"/>
        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:backgroundTint="#ffe3f1"
            android:contentDescription="toggle_button"
            android:onClick="goToImage3"
            app:srcCompat="@android:drawable/btn_radio"
            android:layout_below="@id/iodineCartoon1"
            android:layout_marginStart="210dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/selectHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/dark_purple"
            android:fontFamily="sans-serif-condensed"
            android:text="iodine"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/imageButton"
            android:layout_marginStart="100dp"/>
        <TextView
            android:id="@+id/iodinePara"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_purple"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="10dp"
            android:layout_below="@id/selectHeading"
            android:text="I am sturdy and grounded. I have a talent for highlighting things that are important since I see everything in high resolution. I am also a huge fan of neatness."
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/AboutMeHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/dark_purple"
            android:fontFamily="sans-serif-condensed"
            android:text="About Me"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/iodinePara"
            android:layout_marginStart="100dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:strokeWidth="2dp"
            app:strokeColor="@color/dark_purple"
            android:text="Solid"
            android:textColor="@color/dark_purple"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="100dp"
            android:layout_below="@+id/AboutMeHeading"
            android:backgroundTint="@color/quiz_bg"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:strokeWidth="2dp"
            app:strokeColor="@color/dark_purple"
            android:text="Halogen"
            android:textColor="@color/dark_purple"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="200dp"
            android:layout_below="@+id/AboutMeHeading"
            android:backgroundTint="@color/quiz_bg"
            />


        <TextView
            android:id="@+id/UsesHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/dark_purple"
            android:fontFamily="sans-serif-condensed"
            android:text="Uses"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/button2"
            android:layout_marginStart="100dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:strokeWidth="2dp"
            app:strokeColor="@color/dark_purple"
            android:text="Nutrition"
            android:textColor="@color/dark_purple"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="100dp"
            android:layout_below="@+id/UsesHeading"
            android:backgroundTint="@color/quiz_bg"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:strokeWidth="2dp"
            app:strokeColor="@color/dark_purple"
            android:text="Medicine"
            android:textColor="@color/dark_purple"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="230dp"
            android:layout_below="@+id/UsesHeading"
            android:backgroundTint="@color/quiz_bg"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:strokeWidth="2dp"
            app:strokeColor="@color/dark_purple"
            android:text="Print Making"
            android:textColor="@color/dark_purple"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="100dp"
            android:layout_below="@+id/button5"
            android:backgroundTint="@color/quiz_bg"
            />
        <Button
            android:id="@+id/BondButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#fe6c9e"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Start Bonding"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/button7"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</ScrollView>