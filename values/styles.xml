<?xml version="1.0" encoding="utf-8"?>
<resources>
<style name="CustomAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
<!-- Title color -->
<item name="android:textColorPrimary">@color/dark_purple</item>
<!-- Message color -->
<item name="android:textColorSecondary">@color/dark_purple</item>
</style>
    <style name="CustomAlertDialogButtonStyle" parent="Widget.AppCompat.Button.Colored">
    <item name="android:background">#fe6c9e</item>
    <item name="android:textColor">@color/white</item>
    </style>
    <style name="CustomAlertDialogTitle" parent="Theme.AppCompat.Light">
        <item name="android:textStyle">bold</item> <!-- Make the title bold -->
        <item name="android:fontFamily">sans-serif-condensed</item> <!-- Set custom font -->
    </style>
    <style name="CustomAlertDialogMessage" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">sans-serif-condensed</item> <!-- Set custom font -->
    </style>
</resources>

